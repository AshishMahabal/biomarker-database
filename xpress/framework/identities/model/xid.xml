<model id="xpress">
	<object type="xiuser">
		<!-- Required Attributes -->
		<attr name="ObjectClass" type="string:30" null="no" visibility="public"/>
		<attr name="ObjectId" type="uint" null="no" visibility="public"/>
		<attr name="UserName" type="string:18"  null="no" unique="yes" visibility="public"/>
		<attr name="Password" type="string:255" null="no" visibility="public"/>
		<attr name="EmailAddress" type="string:80" null="no" unique="yes" visibility="public"/>
		<attr name="Created" type="datetime" null="no" visibility="public"/>
		<attr name="Status" type="enum:Pending Confirmation,Active,Disabled" null="no" visibility="public"/>
		<attr name="LastLogin" type="datetime" null="no" visibility="public"/>
	</object>
	
	<object type="xigroup">
		<!-- Required Attributes -->
		<attr name="Name" type="string:30" null="no" unique="yes" visibility="public"/>
		<attr name="ObjectClass" type="string:30" null="no" visibility="public"/>
	</object>
	
	<object type="xirole">
		<!-- Required Attributes -->
		<attr name="Name" type="string:30" null="no" unique="yes" visibility="public"/>
	</object>
	
	<relation object="xiuser">
		<has quantity="many" type="peer" class="xigroup" ondeletepeer="persist" visibility="public" name="groups"/>
		<has quantity="many" type="peer" class="xirole"  ondeletepeer="persist" visibility="public" name="roles"/>
	</relation>
	
	<relation object="xigroup">
		<has quantity="many" type="peer" class="xiuser" ondeletepeer="persist" visibility="public" name="users"/>
	</relation>
	
	<relation object="xirole">
		<has quantity="many" type="peer" class="xiuser" ondeletepeer="persist" visibility="public" name="users"/>
	</relation>
</model>
