<?xml version="1.0" encoding="UTF-8"?>

<page>
	<database>
		<query>
			<!-- SELECT -->
			<select>
				<!-- FROM organ -->
				<table name="organ">
					<!-- desired fields -->
					<field name="*"/>
				</table>
				<where>
					<!--  WHERE organ.ID = $_GET['o'] -->
					<clause table="organ" field="ID" value="o" source="GET" />
				</where>
			</select>
			<update>
				<table name="organ" />
				<where>
					<clause table="organ" field="ID" value="o" source="GET" />
				</where>
			</update>
		</query>
	</database>
	
	<form id="frmMarker">
		<banner title="Edit Organ Site" colspan="2"/>
		<row>
			<cell type="label" value="Site ID:"/>
			<cell type="text" id="siteid" size="35" editable="no" db="ID"/>
		</row>
		<row>
			<cell type="label" value="Site Name:"/>
			<cell type="text" id="name" size="35" db="Name"/>
		</row>
	</form>
</page>
