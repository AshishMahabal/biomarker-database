<?xml version="1.0" encoding="UTF-8"?>

<page>
	<database>
		<query>
			<!-- SELECT -->
			<select>
				<!-- FROM Study -->
				<table name="study">
					<!-- desired fields -->
					<field name="Title"/>
					<field name="Abstract"/>
					<field name="BiomarkerPopulationCharacteristics" as="BPC"/>
					<field name="BiomarkerStudyType" as="Type"/>
					<field name="Design"/>
				</table>
				<where>
					<!--  WHERE study.ID = $_GET['s'] -->
					<clause table="study" field="ID" value="s" source="GET" />
				</where>
			</select>
			<update>
				<table name="study" />
				<where>
					<clause table="study" field="ID" value="s" source="GET" />
				</where>
			</update>
		</query>
	</database>
	
	<form id="frmStudy">
		<banner title="Edit Study" colspan="2"/>
		<row>
			<cell type="label" value="Title:"/>
			<cell type="text" id="StudyTitle" size="35" db="Title"/>
		</row>
		<row>
			<cell type="label" value="Abstract"/>
			<cell type="text" id="StudyAbstract" size="120" rows="6" db="Abstract"/>
		</row>
		<row>
			<cell type="label" value="Biomarker Population Characteristics:"/>
			<cell type="text" id="StudyBPC"  size="50" db="BPC"/>
		</row>
		<row>
			<cell type="label" value="Study Design:"/>
			<cell type="select" id="StudyDesign" options="Retrospective:Retrospective,Prospective Analysis:Prospective Analysis,Cross Sectional:Cross Sectional" db="Design"/>
		</row>
		<row>
			<cell type="label" value="Status:"/>
			<cell type="select" id="StudyStatus" options="UNREGISTERED:Unregistered,REGISTERED:Registered" db="Type"/>
		</row>
	</form>
</page>
