<?xml version="1.0" encoding="UTF-8"?>

<page>
	<database>
		<query>
			<!-- SELECT -->
			<select>
				<!-- FROM Biomarker-Organ -->
				<table name="biomarker_organ">
					<!-- desired fields -->
					<field name="OrganSite"/>
					<field name="SensitivityMin"/>
					<field name="SensitivityMax"/>
					<field name="SensitivityComment"/>
					<field name="SpecificityMin"/>
					<field name="SpecificityMax"/>
					<field name="SpecificityComment"/>
					<field name="PPVMin"/>
					<field name="PPVMax"/>
					<field name="PPVComment"/>
					<field name="NPVMin"/>
					<field name="NPVMax"/>
					<field name="NPVComment"/>
				</table>
				<!-- FROM Organ -->
				<table name="organ">
					<field name="Name"/>
				</table>
				<!--  FROM biomarker -->
				<table name="biomarker">
					<field name="Title"/>
				</table>
				<where>
					<!--  WHERE `biomarker-organ`.BiomarkerID = $_GET['m'] 
							AND `biomarker-organ`.OrganSite = $_GET['o']
							AND `organ`.ID = `biomarker-organ`.OrganSite
							AND `biomarker`.ID = `biomarker-organ`.BiomarkerID -->
					<clause table="biomarker_organ" field="BiomarkerID" value="m" source="GET" />
					<clause table="biomarker_organ" field="OrganSite" value="o" source="GET" />
					<clause table="organ" field="ID" value="OrganSite" source="biomarker_organ" />
					<clause table="biomarker" field="ID" value="BiomarkerID" source="biomarker_organ" />
				</where>
			</select>
			<update>
				<table name="biomarker_organ"/>
				<where>
					<clause table="biomarker_organ" field="BiomarkerID" value="m" source="GET" />
					<clause table="biomarker_organ" field="OrganSite" value="o" source="GET" />
				</where>
			</update>
		</query>
	</database>
	
	<form id="frmBiomarkerOrgan">
		<banner title="Edit Biomarker-Organ Data" colspan="2"/>
		<row>
			<cell type="label" value="Biomarker:"/>
			<cell type="text" id="BiomarkerLabel" db="Title" editable="no"/>
		</row>
		<row>
			<cell type="label" value="Organ Site:"/>
			<cell type="text" id="OrganSiteLabel" db="Name" editable="no"/>
		</row>
		<row>
			<cell type="label" value="Sensitivity Min (%):"/>
			<cell type="text" id="SensMin" size="15" valid="number,0,100" db="SensitivityMin"/>
		</row>
		<row>
			<cell type="label" value="Sensitivity Max (%):"/>
			<cell type="text" id="SensMax" size="15" valid="number,0,100" db="SensitivityMax"/>
		</row>
		<row>
			<cell type="label" value="Sensitivity Comment:"/>
			<cell type="text" id="SensComm" size="45" rows="3" db="SensitivityComment"/>
		</row>
		<row>
			<cell type="label" value="Specificity Min (%):"/>
			<cell type="text" id="SpecMin" size="15" valid="number,0,100" db="SpecificityMin"/>
		</row>
		<row>
			<cell type="label" value="Specificity Max (%):"/>
			<cell type="text" id="SpecMax" size="15" valid="number,0,100" db="SpecificityMax"/>
		</row>
		<row>
			<cell type="label" value="Specificity Comment:"/>
			<cell type="text" id="SpecComm" size="45" rows="3" db="SpecificityComment"/>
		</row>
		<row>
			<cell type="label" value="PPV Min (%):"/>
			<cell type="text" id="PPVMin" size="15" db="PPVMin" valid="number,0,100"/>
		</row>
		<row>
			<cell type="label" value="PPV Max (%):"/>
			<cell type="text" id="PPVMax" size="15" db="PPVMax" valid="number,0,100"/>
		</row>
		<row>
			<cell type="label" value="PPV Comment:"/>
			<cell type="text" id="PPVComm" size="45" rows="3" db="PPVComment"/>
		</row>
		<row>
			<cell type="label" value="NPV Min (%):"/>
			<cell type="text" id="NPVMin" size="15" valid="number,0,100" db="NPVMin"/>
		</row>
		<row>
			<cell type="label" value="NPV Max (%):"/>
			<cell type="text" id="NPVMax" size="15" valid="number,0,100" db="NPVMax"/>
		</row>
		<row>
			<cell type="label" value="NPV Comment:"/>
			<cell type="text" id="NPVComm" size="45" rows="3" db="NPVComment"/>
		</row>
	</form>
</page>
